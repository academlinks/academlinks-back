head
  meta(name="viewport" content="width=device-width")
  meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
  meta(http-equiv="X-UA-Compatible" content="IE=edge")
  title Academlinks
  style.
    .container{
      width:100%;
      background:indigo;
      background:#fff;
    }

    .content{
      min-width:280px;
      max-width:500px;
      margin:0 auto;
      padding:15px 10px;
      border-radius:10px;
      border:1px solid gray;
      box-shadow:0px 0px 10px rgba(0,0,0,0.5);
    }

    .fig{
      max-width:250px;
      margin:0 auto;
      height:100%;
      min-height:200px;
      overflow:hidden;
      background:#fff;
    }

    .logo{
      width:100%;
      height:100%;
      object-fit:contain;
      object-position:center;
    }

    .feedback{
      text-align:center;
    }

    .welcome{
      font-size:26px;
    }

    .message{
      font-size:18px;
      line-height:1.2;
      letter-spacing:0.25px;
    }

    .thanks{
      font-size: 22px;
      font-weight:500;
    }

    .btn{
      display:inline-block;
      margin:10px 0;
      padding:12px 26px;
      border-radius:10px;
      background:rgba(31, 56, 100, 1);
      color:#fff;
      text-decoration:none;
      box-shadow:0px 0px 10px rgba(0,0,0,0.5);
      transition:all;
    }

    .btn:hover{
      background:rgba(3, 85, 191, 1);
    }

    .username{
      text-transform:capitalize;
    }
